<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
        android:id="@+id/infoLayout"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Building Name:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:text="Gorakh niwash"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:text="Nitish "
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/roomsModificationLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/infoLayout"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/roomsOptionslayout"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacate Room"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="#3200ff"
                android:background="@drawable/round_bg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Room"
                android:padding="13dp"
                android:gravity="center"
                android:textColor="#3200ff"
                android:background="@drawable/round_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/circleLayout"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total\nRooms"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#2c04d1"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graph"
                android:gravity="center"
                android:padding="13dp"
                android:textColor="#3200ff"
                android:background="@drawable/round_bg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="March"
                android:padding="13dp"
                android:gravity="center"
                android:textColor="#3200ff"
                android:background="@drawable/round_bg"/>
        </LinearLayout>
    </RelativeLayout>
<TextView
    android:id="@+id/totalIncomeTextView"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:background="@drawable/round_bg"
    android:padding="10dp"
    android:layout_below="@+id/roomsModificationLayout"
    android:textSize="18sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:text="TOTAL INCOME :  RS 180,000"/>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalIncomeTextView"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/emtyRoomsGrid"
        android:background="@drawable/square_red"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty Rooms"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Rs.20,000"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/emtyRoomsGrid"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/square_gren"
        android:orientation="vertical"
        android:layout_alignRight="@+id/emtyRoomsGrid"
        android:layout_alignEnd="@+id/emtyRoomsGrid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent Collected:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Rs.100,000"
            android:textSize="15sp"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/emtyRoomsGrid2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalIncomeTextView"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/square_yellow"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent Due"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Rs.80,000"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emtyRoomsGrid2"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/square_blue"
        android:orientation="vertical"
        android:layout_alignRight="@+id/emtyRoomsGrid2"
        android:layout_alignEnd="@+id/emtyRoomsGrid2"
        android:layout_alignLeft="@+id/emtyRoomsGrid2"
        android:layout_alignStart="@+id/emtyRoomsGrid2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Students:"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female: 0"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Male: 100"
            android:textSize="15sp"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>