<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin=".1dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/viewDetailsRl"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_username"
            android:id="@+id/circleImageView" />

        <TextView
            android:id="@+id/studentNameTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/studentPhoneNumber2"
            android:layout_alignStart="@+id/studentPhoneNumber2"
            android:layout_alignTop="@+id/circleImageView"
            android:text="Nitish Kumar"
            android:layout_marginTop="10dp"
            android:textColor="#424242"
            android:textSize="18sp" />
        <TextView
            android:text="Room No: 7"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/studentNameTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/studentPhoneNumber2" />

        <Button
            android:id="@+id/callButton1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3"
            android:background="@drawable/ic_action_call" />

        <Button
            android:id="@+id/button3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/ic_action_name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>