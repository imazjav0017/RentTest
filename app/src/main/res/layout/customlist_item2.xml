<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/squarebg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/emptyRoomsLinearLayout"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:textSize="15sp"/>

            <TextView
                android:text="Single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:Layout_gravity="center"
                android:id="@+id/roomTypeDisplay"
                android:textColor="#424242"
                android:textSize="15sp"
                android:textStyle="italic"

                android:padding="5dp" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Rent"
                android:textColor="#424242"
                android:textSize="15sp"
                android:padding="5dp"
                android:textStyle="bold"

                />
            <TextView
                android:text="Rs.1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rentDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#424242"
                android:textSize="15sp"
                android:padding="5dp"
                />
        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:textColor="#3200ff"
            android:padding="10dp"
            android:gravity="center"
            android:
            android:layout_marginTop="25dp"
            android:id="@+id/collectingButton"

            android:text="checkin"
            />
    </LinearLayout>


</RelativeLayout>