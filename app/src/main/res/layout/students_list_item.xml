<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Nitish Kumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:textSize="18sp"
        android:id="@+id/studentNameTextView" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_action_call"
        android:layout_marginRight="69dp"
        android:layout_marginEnd="69dp"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/studentNameTextView"
        android:layout_alignBottom="@+id/studentNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_name"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/studentNameTextView"
        android:layout_alignBottom="@+id/studentNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>